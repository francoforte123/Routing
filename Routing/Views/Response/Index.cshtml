@model IEnumerable<Routing.Models.Response>

@{
    ViewData["Title"] = "Response";
}
<h1>@ViewData["Title"]</h1>

<p>This page is used for get response of the request</p>

<p>
    <a asp-action="Create">Create new</a>
</p>

<hr />
<table>
    <tr>
        <th class="col-sm-2">
            @Html.DisplayNameFor(model=>model.Id)
        </th>
        <th class="col-sm-2">
            @Html.DisplayNameFor(model=>model.Author)
        </th>
        <th class="col-sm-2">
            @Html.DisplayNameFor(model=>model.Description)
        </th>
        <th class="col-sm-2">
            @Html.DisplayNameFor(model=>model.IsAccepted)
        </th>
    </tr>




    @foreach (var modelItem in Model)
    {
        <tr>
            <td class="col-sm-2">
                @Html.DisplayFor(item=>modelItem.Id)
            </td>
            <td class="col-sm-2">
                @Html.DisplayFor(item=>modelItem.Author)
            </td>
            <td class="col-sm-2">
                @Html.DisplayFor(item=>modelItem.Description)
            </td>
            <td class="col-sm-2">
                @Html.DisplayFor(item=>modelItem.IsAccepted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id = modelItem.Id }) |
                @Html.ActionLink("Details", "Details", new { id = modelItem.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = modelItem.Id })
            </td>
        </tr>

    }
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}